<h2 style="color: #0E787A;">Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
  <div class="form-inputs" style="color: #0E787A;">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", style: "color: #0E787A;" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", style: "color: #0E787A;" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", style: "color: #0E787A;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
