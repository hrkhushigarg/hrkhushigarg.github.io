<h2 style="color: #0E787A;">Forgot your password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs", style="color: #0E787A;" >
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" , style: "color: #0E787A;"} %>
  </div>

  <div class="form-actions", style="color: #0E787A;">
    <%= f.button :submit, "Send me reset password instructions", style: "color: #0E787A;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
